{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": "./src/index.tsx",
    "./styles.css": "./dist/index.css"
  },
  "license": "MIT",
  "scripts": {
    "build": "tailwindcss -i ./src/styles.css -o dist/index.css",
